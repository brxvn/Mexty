                <!--txtDetalle-->
                <TextBox Background="Beige"
                     x:Name="txtDetalle"
                     Grid.Column="2"
                     Margin="10,0,10,0"
                     PreviewTextInput="OnlyLettersAndNumbersValidation"
                     CharacterCasing="Upper"
                     MaxLength="50">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Setters>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border Style="{DynamicResource BorderStyle}" ToolTip="Detalle" Background="Beige" CornerRadius="15" Width="auto" Focusable="True" Height="95" BorderThickness="3" BorderBrush="Beige" x:Name="border" SnapsToDevicePixels="True" Cursor="IBeam" VerticalAlignment="Bottom">
                                                <Grid>
                                                    <Rectangle StrokeThickness="1"/>
