<Window x:Class="Mexty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mexty"
        xmlns:ViewModel="clr-namespace:Mexty.MVVM.ViewModel"
        xmlns:fa="clr-namespace:Meziantou.WpfFontAwesome;assembly=Meziantou.WpfFontAwesome"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Background="Transparent"
        ResizeMode="CanResize"
        Height="1080" Width="1920">

    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#710a24">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"></RowDefinition>
                <RowDefinition Height="840*"></RowDefinition>
                <RowDefinition Height="120" ></RowDefinition>
            </Grid.RowDefinitions>

            <Image Source="/Resource/brand.png" HorizontalAlignment="Center" Margin="10" ></Image>
            <Separator
                VerticalAlignment="Bottom"
                Width="300"
                Background="AntiqueWhite"/>

            <StackPanel Grid.Row="1">

                <RadioButton x:Name="Admn"
                             Content="Administración"
                             Height="70"
                             Foreground="AntiqueWhite"
                             FontSize="20"
                             Margin="0,50,0,0"
                             Style="{StaticResource ButtonTheme}">
                </RadioButton>


                <RadioButton Content="Inventario"
                             Height="70"
                             Foreground="AntiqueWhite"
                             FontSize="20"
                             Margin="0,50,0,0"
                             Style="{StaticResource ButtonTheme}"/>

                <RadioButton Content="Reportes"
                             Height="70"
                             Foreground="AntiqueWhite"
                             FontSize="20"
                             Margin="0,50,0,0"
                             Style="{StaticResource ButtonTheme}"/>

                <RadioButton Content="Ventas"
                             Height="70"
                             Foreground="AntiqueWhite"
                             FontSize="20"
                             Margin="0,50,0,0"
                             Style="{StaticResource ButtonTheme}"/>
            </StackPanel>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    >

                <StackPanel Grid.Row="2" Orientation="Horizontal"  HorizontalAlignment="Stretch" Margin="50,0,50,0">

                    <fa:FontAwesomeIcon RegularIcon="User"
                                    FontSize="20"
                                    Foreground="AntiqueWhite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Center"
                                    />
                    <TextBlock x:Name="activeUser"
                           FontSize="20"
                           Margin="15"
                           Foreground="AntiqueWhite"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                </StackPanel>

            </Border>

            <Separator
                Grid.Row="2"
                VerticalAlignment="Top"
                Width="300"
                Background="AntiqueWhite"/>

            <Image Source="/Resource/brand.png"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="30"/>

            <ContentControl
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}"/>

            <Label Grid.Column="1" Grid.Row="2"
                   Name="time" 
                   Foreground="AntiqueWhite" 
                   FontSize="20" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,50,0"
                   ></Label>
        </Grid>
    </Border>
</Window>
